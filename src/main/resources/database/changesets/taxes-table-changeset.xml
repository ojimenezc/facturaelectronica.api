<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="oscar jimenez carmona" id="3">
        <preConditions onFail="CONTINUE" onError="CONTINUE">
            <not>
                <tableExists tableName="taxes"/>
            </not>
        </preConditions>
        <createTable tableName="taxes"
                     remarks="A table to contain all taxes information">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="tax_name" type="varchar(300)">
                <constraints nullable="false"/>
            </column>
            <column name="tax_code" type="varchar(10)">
                <constraints nullable="false"></constraints>
            </column>
        </createTable>
        <addAutoIncrement
                columnDataType="BIGINT"
                columnName="id"
                incrementBy="1"
                startWith="1"
                tableName="taxes"/>
    </changeSet>
</databaseChangeLog>
