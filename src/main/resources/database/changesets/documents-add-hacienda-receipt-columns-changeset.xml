<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="oscar jimenez carmona" id="3">
        <preConditions onFail="CONTINUE" onError="CONTINUE">
            <tableExists tableName="documents"/>
            <not>
                <columnExists tableName="documents" columnName="hacienda_Receipt_XML"></columnExists>
            </not>
        </preConditions>
        <addColumn tableName="documents">
            <column name="hacienda_Receipt_XML" type="MEDIUMTEXT CHARACTER SET utf8"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
